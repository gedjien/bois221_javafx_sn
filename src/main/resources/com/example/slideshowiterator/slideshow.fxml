<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.slideshowiterator.SlideShowController">
    <ImageView fx:id="imageView" />
    <HBox spacing="10">
        <Button text="Choose Folder" onAction="#chooseFolder" />
        <Button fx:id="prevButton" text="Prev" onAction="#prevImage" />
        <Button fx:id="nextButton" text="Next" onAction="#nextImage" />
        <Button text="Start" onAction="#startSlideShow" />
        <Button text="Stop" onAction="#stopSlideShow" />
    </HBox>
</VBox>
