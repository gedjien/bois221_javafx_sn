<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.adapter.Controller">
    <VBox layoutX="14.0" layoutY="14.0" spacing="10">
        <HBox spacing="10">
            <TextField fx:id="inputField" promptText="Enter value" />
            <Button fx:id="insertButton" text="Insert" onAction="#handleInsert" />
            <Button fx:id="deleteButton" text="Delete" onAction="#handleDelete" />
            <Button fx:id="findButton" text="Find" onAction="#handleFind" />
        </HBox>
        <ListView fx:id="demolist" prefHeight="300.0" prefWidth="400.0" />
        <Rectangle fx:id="resultIndicator" width="400" height="30" fill="transparent" />
    </VBox>
</AnchorPane>
