<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.strategy.Controller">
    <children>
        <Label layoutX="17.0" layoutY="20.0" text="Выберите метод сортировки:" />
        <ComboBox fx:id="sortingComboBox" layoutX="180.0" layoutY="20.0" prefWidth="150.0" />
        <Button layoutX="340.0" layoutY="20.0" text="Заполнить" onAction="#fillArray" />
        <Button layoutX="440.0" layoutY="20.0" text="Сортировать" onAction="#sortArray" />
        <Label layoutX="17.0" layoutY="60.0" text="Исходный Массив:" />
        <TextField fx:id="unsortedArray" layoutX="150.0" layoutY="60.0" prefWidth="400.0" editable="false" />
        <Label layoutX="17.0" layoutY="100.0" text="Отсортированный Массив:" />
        <TextField fx:id="sortedArray" layoutX="150.0" layoutY="100.0" prefWidth="400.0" editable="false" />
    </children>
</AnchorPane>
