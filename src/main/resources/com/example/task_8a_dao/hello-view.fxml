<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.task_8a_dao.HelloController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <ComboBox fx:id="storageTypeComboBox" promptText="Выберите тип хранилища"/>
        <Button text="Загрузить" onAction="#handleLoad"/>
    </HBox>

    <TableView fx:id="taskTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="nameColumn" text="Название"/>
            <TableColumn fx:id="timeColumn" text="Время"/>
            <TableColumn fx:id="contextColumn" text="Контекст"/>
            <TableColumn fx:id="statusColumn" text="Статус"/>
        </columns>
    </TableView>

    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <Label text="Название:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Время:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="timeField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Контекст:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="contextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Статус:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <Button text="Добавить" onAction="#handleAdd"/>
            <Button text="Обновить" onAction="#handleUpdate"/>
            <Button text="Удалить" onAction="#handleDelete"/>
        </HBox>
    </GridPane>

</VBox>
