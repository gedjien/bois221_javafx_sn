<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.canvas.Canvas?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.shape.ShapeController">
    <Canvas fx:id="canvas" width="600" height="400" style="-fx-border-color: black;" />
    <HBox spacing="10" alignment="CENTER">
        <Button text="Прямоугольник" onAction="#drawRectangle" />
        <Button text="Круг" onAction="#drawCircle" />
        <Button text="Рисовать линию" onAction="#enableLineDrawing" />
    </HBox>

</VBox>
