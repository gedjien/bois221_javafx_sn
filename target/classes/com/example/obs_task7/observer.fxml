<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.obs_task7.Controller">
    <Button fx:id="startButton" layoutX="14.0" layoutY="14.0" text="Start" onAction="#startTimer" />
    <Button fx:id="stopButton" layoutX="80.0" layoutY="14.0" text="Stop" onAction="#stopTimer" />
    <Label fx:id="timeLabel" layoutX="14.0" layoutY="60.0" text="Прошло 0 с" />
    <Label fx:id="musicLabel" layoutX="14.0" layoutY="90.0" text="Музыка заиграет через 20 секунд" />
    <Circle fx:id="animationCircle" layoutX="14.0" layoutY="150.0" radius="10.0" />
</AnchorPane>
